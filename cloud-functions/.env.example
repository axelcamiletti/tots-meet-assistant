# Firebase Configuration
FIREBASE_PROJECT_ID=tots-meet-assistant
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@tots-meet-assistant.iam.gserviceaccount.com

# OpenAI Configuration (para integraci√≥n futura)
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Google AI Configuration (alternativa)
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# CORS Configuration
ALLOWED_ORIGINS=https://meet.google.com,chrome-extension://your-extension-id,https://your-angular-app.web.app

# Environment
NODE_ENV=development

# Rate Limiting (requests per minute)
RATE_LIMIT_MAX_REQUESTS=100

# Firestore Collections
MEETINGS_COLLECTION=meetings
USERS_COLLECTION=users
ANALYTICS_COLLECTION=analytics
